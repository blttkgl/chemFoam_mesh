FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //


defaultFieldValues
(
    volScalarFieldValue T 1200
);

regions
(
    sphereToCell
    {
        centre (0.004 0.004 4e-5);
        radius 1e-3;
        fieldValues
        (
            volScalarFieldValue T 1300
        );
    }
);


